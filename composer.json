{
    "name": "amintado/yii2-module-slider",
    "description": "A slider system (widget and module) for Yii2 websites",
    "keywords": ["yii2", "yii2-slider", "slider module","amintado"],
    "type": "yii2-extension",
    "license": "GPL",
    "version": "0.1",
    "homepage": "https://github.com/amintado/yii2-module-slider",
    "authors": [
        {
            "name": "amintado",
            "email": "amintado@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "mootensai/yii2-relation-trait": "*",
        "kartik-v/bootstrap-fileinput": "@dev"
    },
    "autoload": {
        "psr-4": {
            "amintado\\slider\\": ""
        },
        "scripts": {
            "post-update-cmd": [
                "bower install vis",
                "bower install bootstrap-toggle",
                "bower install bootstrap-colorpicker"
                ]
        }
    }
}
